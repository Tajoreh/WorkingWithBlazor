@using _01_FirstApp.Data
@using _01_FirstApp.Services
@inject EmployeeState State
<div class="modal fade " id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input @bind-value="Employee.Title" @bind-value:event="oninput"/>
                <h3>@Employee.Title</h3>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" @onclick="()=>State.CancelDialog()">Close</button>
                <button type="button" class="btn btn-primary" @onclick="()=>State.Add(Employee)">Save changes</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public TodoItem Employee { get; set; }

}