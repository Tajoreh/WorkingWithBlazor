@using _01_FirstApp.Data


<div class="card">
    <div class="card-body">
        @{
            var color = Item.IsDone ? "btn-success" : "btn-danger";

        }

        <span class="btn @color">
            @Item.Title
        </span>
    </div>
</div>


@code {
    [Parameter]
    public TodoItem Item { get; set; }
}
